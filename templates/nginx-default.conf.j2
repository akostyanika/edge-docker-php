    root {{ WEB_ROOT }}{{ WEB_PUBLIC }};

    location / {
        try_files $uri $uri/ /index.html /index.php$is_args$args;
    }

    location ~ \.php$ {
        try_files $uri =404;

        include fastcgi.conf;

        fastcgi_read_timeout 300;
        fastcgi_pass fastcgi_backend;
    }

    include {{ WEB_ROOT }}/nginx[.]conf;

